{
  "manifest_version": 3,
  "name": "Package Tracker",
  "version": "1.0",
  "description": "Track your packages and cache them locally.",
  "permissions": ["storage"],
  "host_permissions": ["https://api.trackingmore.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
